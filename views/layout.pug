doctype html
mixin item(title, url)
  li(class='list-item')
    a(href=url class=path == url ? 'item-active' : 'item')=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      ul
        +item('Strona glowna', '/')
        +item('Aktualnosci', '/news')
        +item('Quiz', '/quiz')
        +item('Admin', '/admin')

    block content
