extends layout

block content
  h1= title
  if show
    form(method='post')
      p Treść pytania 
      ul 
        each item in data 
          li 
            label=item.title 
            input(type='radio' name='quiz' value=item._id)
      input(type='submit' value='Vote')
      p Aby zobaczyć wyniki oddaj głos
  else 
    h1 Dokonałeś już głosu w ankiecie
    p Wyniki 
    ul
    each item in data
      li #{item.title} ilość głosów: #{item.vote} (#{Math.round(item.vote/sum*100)}%)
    p Oddano głosów: #{sum}
     

